@echo off
REM Скрипт для запуска сбора данных о малом бизнесе в Праге

cd /d "%~dp0\.."

echo ============================================================
echo СБОР ДАННЫХ О МАЛОМ БИЗНЕСЕ В ПРАГЕ
echo ============================================================
echo.

REM Проверка наличия Python
python --version >nul 2>&1
if errorlevel 1 (
    echo ОШИБКА: Python не найден!
    echo Установите Python или добавьте его в PATH
    pause
    exit /b 1
)

REM Запуск скрипта
python scripts\prague_small_businesses.py %*

if errorlevel 1 (
    echo.
    echo ============================================================
    echo ОШИБКА ПРИ ВЫПОЛНЕНИИ СКРИПТА
    echo ============================================================
    pause
    exit /b 1
)

echo.
echo ============================================================
echo ГОТОВО!
echo ============================================================
pause
